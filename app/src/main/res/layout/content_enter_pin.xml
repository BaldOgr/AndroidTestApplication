<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:padding="@dimen/stylecomponents.dimen.large"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/enterPin"
        android:layout_marginTop="@dimen/stylecomponents.margin.xxlarge.top"
        android:padding="@dimen/stylecomponents.dimen.medium"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/quickEnterHeader"
            android:layout_gravity="center_horizontal"
            android:text="Text1"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/enterPinHeader"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/pinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="54dp"
            android:paddingRight="54dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot0"
                android:tag="dot0"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dot1"
                android:tag="dot1"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />

            <ImageView
                android:id="@+id/dot2"
                android:tag="dot2"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />

            <ImageView
                android:id="@+id/dot3"
                android:tag="dot3"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dot4"
                android:tag="dot4"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dot5"
                android:tag="dot5"
                app:srcCompat="@drawable/grey_dot"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/content_enter_pin_pad"/>
    </LinearLayout>
</RelativeLayout>